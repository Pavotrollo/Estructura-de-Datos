#include <iostream>
#include <stack>
using namespace std;

stack<string> anterior; 
stack<string> siguiente;  
string actual;            

int main() {
    int opcion;	
    string nombreT;

    do {    
        cout << "\n----- Menu----\n";
        cout << "1. Mostrar pagina actual\n";
        cout << "2. Agregar pagina\n";
        cout << "3. Retroceder a la pagina anterior\n";
        cout << "4. Avanzar a la pagina siguiente\n";
        cout << "5. Eliminar el historial\n";
        cout << "6. Salir\n";
        cout << "Selecciona una opcion: ";
        cin >> opcion;
 	
        switch(opcion) {
            case 1:
                cout << "\n----- Pagina Actual ----\n";
                if(actual.empty())
                    cout << "No hay pagina actual.\n";
                else
                    cout << actual << "\n";
                break;

            case 2:
                cout << "\n----- Agregar Pagina ----\n";
                cout << "Nombre de la pagina: ";
                cin >> nombreT;
                if(!actual.empty()) {
                    anterior.push(actual); 
                }
                actual = nombreT;
                while(!siguiente.empty()) siguiente.pop(); 
                break;

            case 3:
                cout << "\n----- Pagina Anterior ----\n";
                if(!anterior.empty()) {
                    siguiente.push(actual);
                    actual = anterior.top();
                    anterior.pop();
                    cout << "Retrocediste a: " << actual << "\n";
                } else {
                    cout << "No hay paginas anteriores.\n";
                }
                break;

            case 4:
                cout << "\n----- Pagina Siguiente ----\n";
                if(!siguiente.empty()) {
                    anterior.push(actual);
                    actual = siguiente.top();
                    siguiente.pop();
                    cout << "Avanzaste a: " << actual << "\n";
                } else {
                    cout << "No hay paginas siguientes.\n";
                }
                break;

            case 5:
                cout << "Historial eliminado.\n";
                while(!siguiente.empty()){
				siguiente.pop();
				}
                while(!anterior.empty()){
				anterior.pop();}
                actual.clear();
                break;

            case 6:
                cout << "Saliendo...\n";
                break;

            default:
                cout << "Opcion no valida\n";	
        }
    } while(opcion != 6);

    return 0;
}

