#include<iostream>
#include<queue>
using namespace std;

queue<string> clientes;    
   
string nombreT;
int main(){
int opcion;	
	do {    
		cout << "\n----- Menu----\n";
        cout << "1. Agrega un nuevo cliente a la cola\n";
        cout << "2. Atender al siguiente\n";
        cout << "3. Lista de espera\n";
        cout << "4. Vaciar la lista de espera\n";
        cout << "5. Salir\n";
        cout << "Selecciona una opcion: ";
        cin >> opcion;
 	
	 	switch(opcion) {
	 		case 1:
	 			cout << "\n----- Nuevo Cliente ----\n";
	 			cout<<"Introduce el nombre: ";
	 			cin>>nombreT;
	 			clientes.push(nombreT);
	 			cout<<"Numero:"<<clientes.size()<<"\n";
	 			break;
	 		case 2:
	 			cout << "\n----- Proceso ----\n";
	 			if(clientes.empty()==0) {
                    cout << "Atendiendo a: " << clientes.front() << "\n";
                    clientes.pop();
                } else {
                    cout << "No hay clientes en espera.\n";
                }

	 			break;
	 		case 3:
	 			cout << "\n----- Lista de espera ----\n";
	 			if(clientes.empty()==0) {
	 				queue<string> copia = clientes;
					while(copia.empty()==0) {
    				cout << copia.front() << "\n";
    				copia.pop();
					}
				}else{
					cout<<"No hay clientes en espera\n";	
				}
	 			
			 	break;
			case 4:
				while(clientes.empty()==0) {	
				clientes.pop();
            	}
				cout << "Lista de espera vaciada.\n";
                break;
				break;
			case 5:
                cout << "Saliendo del programa...\n";
                break;

            default:
                cout << "Opcion no valida\n";	
		}
	} while(opcion != 5);
}
